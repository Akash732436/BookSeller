@model Company


<div class="container p-5">
	
		<div class="row">
		<div class="col-10 border">
		<form method="post" enctype="multipart/form-data">
			<div class="m-3 mb-5">
			<h4> @(Model.Id == 0 ? "Create" : "Update")  Company</h4>
			</div>
			<div asp-validation-summary="All"></div>
		<input asp-for="Id" hidden />
		<div class="m-3">
			<label asp-for="Name" class="ms-1 mb-1"></label>
			<input asp-for="Name" class="form-control"/>
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="m-3">
			<label asp-for="PhoneNumber" class="ms-1 mb-1"></label>
			<input asp-for="PhoneNumber" class="form-control"/>
			<span asp-validation-for="PhoneNumber" class="text-danger"></span>
		</div>
		<div class="m-3">
			<label asp-for="StreetAddress" class="ms-1 mb-1"></label>
			<input asp-for="StreetAddress" class="form-control"/>
			<span asp-validation-for="StreetAddress" class="text-danger"></span>
		</div>
		<div class="m-3">
			<label asp-for="City" class="ms-1 mb-1"></label>
			<input asp-for="City" class="form-control"/>
			<span asp-validation-for="City" class="text-danger"></span>
		</div>
		<div class="m-3">
			<label asp-for="State" class="ms-1 mb-1"></label>
			<input asp-for="State" class="form-control"/>
			<span asp-validation-for="State" class="text-danger"></span>
		</div>
		<div class="m-3">
			<label asp-for="PostalCode" class="ms-1 mb-1"></label>
			<input asp-for="PostalCode" class="form-control"/>
			<span asp-validation-for="PostalCode" class="text-danger"></span>
		</div>
		<div class="row mt-5 ms-3">
			<div class="col-6">
					@if (Model.Id == 0)
					{
							<button type="submit" class="btn btn-success">
							Create
							</button>
					}
					else
					{
						<button type="submit"  class="btn btn-success">
						Update
						</button>
					}

			</div>
			<div class="col-6 text-end">
				<a class="btn btn-outline-dark" asp-controller="Company" asp-action="Index">Back to List</a>
			</div>
		</div>
		</form>
		</div>
		
		</div>
		
	
</div>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
